---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<article
  class:list={[
    "rounded-3xl bg-white border border-black/5 shadow-sm",
    "transition-transform duration-300 ease-out hover:scale-[1.02]",
    "overflow-visible p-6",
    className,
  ]}
>
  <slot />
</article>
