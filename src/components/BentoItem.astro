---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<article
  class:list={[
    "rounded-lg bg-[#fafafa] border-0",
    "transition-all duration-[250ms] ease-in-out hover:bg-[#f0f0f0]",
    "overflow-hidden relative group",
    className,
  ]}
>
  <slot />
</article>
